source store-tfstate.sh 

terraform init -backend-config="resource_group_name=$RESOURCE_GROUP_NAME" \
               -backend-config="storage_account_name=$STORAGE_ACCOUNT_NAME" \
               -backend-config="container_name=$CONTAINER_NAME" \
               -reconfigure


terraform plan -var="subscription_id=$SUBSCRIPTION_ID"
terraform apply -auto-approve -var="subscription_id=$SUBSCRIPTION_ID"

terraform destroy -auto-approve -var="subscription_id=$SUBSCRIPTION_ID"
